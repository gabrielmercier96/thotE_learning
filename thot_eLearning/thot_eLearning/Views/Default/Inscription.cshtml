@model thot_eLearning.Models.Etudiant
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>Inscription</title>
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
	<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
	<link href="~/Content/admin.css" rel="stylesheet" />
</head>
<body>
<form method="post" id="send" name="send" action="/Default/Inscription">
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-4" style="margin-top: 50px;">
				<label>Prenom</label><input name="Prenom" class="form-control" id="prenom" type="text"/><br/>
				<label>Nom</label><input name="Nom" class="form-control" id="nom" type="text"/><br/>
				<label>Email</label><input name="Email" class="form-control" id="email" type="text"/><br/>
				<label>Education</label>
				<select name="Education" class="form-control" id="education">
					@foreach (string element in Model.ListEducation)
					{
						<option value="@element">@element</option>
					}
				</select><br/>
				@*<input type="button"  id="env" value="s'incrire"/><br/>*@
				<button type="button" class="btn btn-primary" id="env"><i class="fas fa-user-plus"></i> S'incrire</button><br />
				@Html.ActionLink("Déjà inscrit", "Index", "Default")
			</div>
		</div>
		    
	</div>
</form>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
<script src="~/JavaScript.js"></script>
</body>
</html>



